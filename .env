# NOA Environment Variables
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# Core Configuration
# ============================================
NOA_ROOT=N:\noa
NOA_ENV=development

# ============================================
# P2P Network
# ============================================
NOA_P2P_PORT=8080
NOA_P2P_NETWORK=noa-network
NOA_P2P_DISCOVERY_ENABLED=true

# ============================================
# AI Providers (add your API keys)
# ============================================
# OpenAI
OPENAI_API_KEY=your-openai-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Local AI (Ollama)
OLLAMA_HOST=http://localhost:11434

# ============================================
# Git/GitHub
# ============================================
GITHUB_TOKEN=your-github-token-here

# ============================================
# Database (if applicable)
# ============================================
# DB_CONNECTION_STRING=postgresql://user:pass@localhost:5432/noa

# ============================================
# Feature Flags
# ============================================
FEATURE_P2P_ENABLED=true
FEATURE_AI_ENABLED=true
FEATURE_DEVICE_ORCHESTRATION_ENABLED=true
